<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="https://via.placeholder.com/400" class="card-img" alt="avatar"
        style="border-radius: 50%; width: 15em; height: 15em;">
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-outline-primary">Edit</a>
      </div>
    </div>
  </div>
</div>