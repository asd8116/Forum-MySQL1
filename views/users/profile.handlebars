<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      {{#if profile.image}}
      <img src="{{profile.image}}" class="card-img" alt="avatar" style="border-radius: 50%; width: 15em; height: 15em;">
      {{else}}
      <img src="https://via.placeholder.com/400" class="card-img" alt="avatar"
        style="border-radius: 50%; width: 15em; height: 15em;">
      {{/if}}
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{profile.name}}</h5>
        <p class="card-text">{{profile.email}}</p>
        {{#ifCond profile.id user.id}}
        <p><a href="/users/{{profile.id}}/edit" class="btn btn-outline-primary">Edit</a></p>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <strong>{{profile.Comments.length}}則 已評論餐廳</strong>
      </div>

      <div class="card-body">
        {{#each profile.Comments}}
        <a href="/restaurants/{{this.Restaurant.id}}">
          <img src={{this.Restaurant.image}} class="card-img" alt="avatar"
            style="border-radius: 50%; width: 5em; height: 5em;">
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>